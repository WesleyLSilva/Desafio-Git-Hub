Algoritmo "semnome"

Var

    Nome : caractere
    hora , horastrab ,pagamento : real

Inicio

    escreva(" Nome : ")
    leia(Nome)
    escreva(" Valor por Hora : ")
    leia(hora)
    escreva(" Horas Trabalhadas : ")
    leia(horastrab)
    
    pagamento <- hora * horastrab
    
    escreval("O Pagamento para ",nome ," deve ser ",pagamento:4:2)

Fimalgoritmo